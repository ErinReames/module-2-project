<h1>Available Users</h1>

<ul>
   <% @users.each do |user| %>
      <li><%= link_to(user.username, user_path(user)) %> </li>
      <ul>
         <li><%= pluralize(user.pets_count, "Rented Pet") %></li>
         <li><%= pluralize(user.upcoming_appointments_count, "Upcoming Appointment") %></li>
      </ul>
   <% end %>
</ul>