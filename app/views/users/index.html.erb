<div class="h1 text-center"> 
<h1 >Available Users</h1></div>

<ul class="list-group-item text-center ">
   <div class="flex-column">
  <li class="list-group-item"><%= link_to('Create New User', new_user_path) %></li>
  <% @users.each do |user| %>
  <li class="list-group-item"><%= link_to(user.username, user_path(user)) %><br>
  <%= pluralize(user.pets_count, "Rented Pet") %><br>
  <%= pluralize(user.upcoming_appointments_count, "Upcoming Appointment") %></li>
  
  <% end %>
  </div>
</ul>
