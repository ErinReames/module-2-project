<% if flash[:errors] %>
    <ul style = "color: red">
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @user) do |f| %>
    <%= f.label(:username) %>
    <%= f.text_field(:username) %>
    <br>
    <%= f.label(:phone) %>
    <%= f.telephone_field(:phone) %>
    <br>
    <%= f.label(:address) %>
    <%= f.text_field(:address) %>
    <br>
    <%= f.submit %>
<% end %>