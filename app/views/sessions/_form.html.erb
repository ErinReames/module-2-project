<% if !!flash[:error] %>
    <ul style = "color: red">
        <li><%= flash[:error] %></li>
    </ul>
<% end %>

<%= form_with(url: sessions_path) do |f| %>
    <%= f.label(:username) %>
    <%= f.text_field(:username) %>
    <br>
    <%= f.label(:password) %>
    <%= f.password_field(:password) %>
    <br>
    <%= f.submit(:login) %>
<% end %>