<h1><%= @review.title %></h1>
<ul>
    <li>Rating: <%= @review.rating %></li>
    <li>User: <%= link_to(@review.user.username, user_path(@review.user)) %></li>
    <li>Pet: <%= link_to(@review.pet.name, pet_path(@review.pet)) %></li>
    <li>Date: <%= @review.date %></li>
</ul>
<p><%= @review.content %></p>
